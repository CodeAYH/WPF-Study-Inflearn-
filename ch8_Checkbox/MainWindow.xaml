<Window x:Class="ch8_Checkbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch8_Checkbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label>과일</Label>
            <CheckBox>딸기</CheckBox>
            <CheckBox Content="사과"  IsChecked="True"/>
            <CheckBox Content="수박" />
            <CheckBox Content="배" />
            <CheckBox VerticalContentAlignment="Center"
                      x:Name="chkApple"
                      Checked="chkApple_Checked"
                      Unchecked="chkApple_Unchecked">
                <StackPanel>
                    <Image Source="https://cdn2.iconfinder.com/data/icons/artificial-intelligence-137/64/humanoid-ai-robot-android-artificial_intelligence-cyborg-256.png"
                          Width="30"/>
                    <TextBlock VerticalAlignment="Center" Text="청사과" x:Name="tb" />
                </StackPanel>
            </CheckBox>
        </StackPanel>
    </Grid>
</Window>
